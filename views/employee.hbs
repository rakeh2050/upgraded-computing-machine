<div class="row">
    <div class="col-md-12">
        <h1> {{data.name}}&nbsp; - Product ID: {{data.id}}</h1>
        <form method="post" action="/employee/update">
            <input type="hidden" name="employeeNum" value="{{data.id}}" />
            <fieldset>
                <legend>Personal Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="firstName">Name:</label>
                            <input class="form-control" id="firstName" name="firstName" type="text" value="{{data.name}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="last_name">Category:</label>
                            <input class="form-control" id="last_name" name="last_name" type="text" value="{{data.primary_category}}" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input class="form-control" id="email" name="email" type="text" value="{{data.email}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="SSN">Package:</label>
                            <input class="form-control" id="SSN" name="SSN" type="text" value="{{data.package}}" readonly />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressStreet">Address (Street):</label>
                            <input class="form-control" id="addressStreet" name="addressStreet" type="text" value="{{data.addressStreet}}" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label for="addresCity">Address (City):</label>
                        <input class="form-control" id="addresCity" name="addresCity" type="text" value="{{data.addresCity}}" />
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressState">Address (State):</label>
                            <input class="form-control" id="addressState" name="addressState" type="text" value="{{data.addressState}}" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressPostal">Address (Zip Code):</label>
                            <input class="form-control" id="addressPostal" name="addressPostal" type="number" value="{{data.price_in_cents}}" />
                        </div>
                    </div>
                </div>


            </fieldset>

            <fieldset>
                <legend>Company Information</legend>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="isManager">Manager:</label>
                            {{#if data.isManager}}
                            <input class="form-control" type="checkbox" id="isManager" name="isManager" checked />
                            {{else}}
                            <input class="form-control" type="checkbox" id="isManager" name="isManager" />
                            {{/if}}
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="employeeManagerNum">Employee's Manager Number:</label>
                            <input class="form-control" id="employeeManagerNum" name="employeeManagerNum" type="text" value="{{data.employeeManagerNum}}"/>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Status:</label><br />
                                {{#equal data.status "Full Time"}}
                                <label  class="checkbox-inline">
                                    <input type="radio" id="statusFulltime" name="status" value="Full Time" checked="" /> Full Time
                                </label>
                                <label  class="checkbox-inline">
                                    <input type="radio" id="statusParttime" name="status" value="Part Time"  /> Part Time
                                </label>
                                {{/equal}}
                                {{#equal data.status "Part Time"}}
                                <label  class="checkbox-inline">
                                    <input type="radio" id="statusFulltime" name="status" value="Full Time"  /> Full Time
                                </label>
                                <label  class="checkbox-inline">
                                    <input type="radio" id="statusParttime" name="status" value="Part Time" checked="" /> Part Time
                                </label>
                                {{/equal}}
                                {{#unless data.status}}
                                <label  class="checkbox-inline">
                                    <input type="radio" id="statusFulltime" name="status" value="Full Time"  /> Full Time
                                </label>
                                <label  class="checkbox-inline">
                                    <input type="radio" id="statusParttime" name="status" value="Part Time" /> Part Time
                                </label>
                                {{/unless}}
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="department">Quantity</label>
                            <select class="form-control" name="department" id="department">
                                {{#equal data.quantity ""}}
                                    <option value="">Choose</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                {{/equal}}
                                {{#equal data.quantity "1"}}
                                    <option value="1" selected>1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                {{/equal}}
                                {{#equal data.quantity "2"}}
                                    <option value="1">1</option>
                                    <option value="2" selected>2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                {{/equal}}
                                {{#equal data.quantity "3"}}
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3"selected>3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                {{/equal}}
                                {{#equal data.quantity "4"}}
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4" selected>4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                {{/equal}}
                                {{#equal data.quantity "5"}}
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5" selected>5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                {{/equal}}
                                {{#equal data.quantity "6"}}
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6" selected>6</option>
                                    <option value="7">7</option>
                                {{/equal}}
                                {{#equal data.quantity "7"}}
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7" selected>7</option>
                                {{/equal}}
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="hireDate">Hire Date</label>
                            <input class="form-control" id="hireDate" name="hireDate" type="text" value="{{data.hireDate}}" readonly />
                        </div>
                    </div>
                </div>
            </fieldset>
            <hr />
            <input type="submit" class="btn btn-primary pull-right"  value="Add to Cart" /><br /><br /><br />
        </form>
    </div>
</div>